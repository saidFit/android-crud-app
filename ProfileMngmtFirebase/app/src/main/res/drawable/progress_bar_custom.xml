<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/black" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners (optional) -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#007ACC" /> <!-- Progress color (blue in this case) -->
                <corners android:radius="8dp" /> <!-- Rounded corners (optional) -->
                <stroke android:width="10dp" android:color="@color/gray_500" />
            </shape>
        </clip>
    </item>
</layer-list>
